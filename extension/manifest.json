{
  "manifest_version": 3,
  "name": "BittKing Rug Radar",
  "version": "1.0",
  "description": "Detect rug pulls and scan token risk scores instantly.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://bittking.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}